<%- include('partials/header.ejs')  %>


<div class="container" style="margin: 25px;padding: 126px;">
  <h1 style="text-align: center;height: -27px;padding: -20px;margin: -55px; font-family: 'montserrat', sans-serif; font-size: 2.8rem;">
    <b>news-and-events</b>
  </h1>
</div>


<div class="row">
  <div class="col-md-6 mx-auto">
    <h1 class="display-6">Edit <%= news.title %></h1>

    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" name="title" id="title" placeholder="Product Name" value="<%= news.title %> ">
    </div>
    <div class="mb-3">
      <label for="img" class="form-label">Image Url</label>
      <input class="form-control" type="text" name="img" id="img" placeholder="Image Url" value=" ">
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">&#x20B9</span>
        <input type="text" name="price" id="price" class="form-control" placeholder="Price" aria-describedby="basic-addon1" value=" ">
      </div>
    </div>
    <div class="mb-3">
      <label for="desc" class="form-label">Description</label>
      <textarea class="form-control" name="description" id="description" rows="5"><%= news.description %> </textarea>
    </div>

    </form>
  </div>
</div>

